<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <!-- Compiled and minified CSS -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.6/css/materialize.min.css">
    <link href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="~/css/Styles.css" />

    <title>@ViewBag.Title</title>
</head>
<body>
    <script type="text/javascript" src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
    <!-- Compiled and minified JavaScript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.6/js/materialize.min.js"></script>

    <script type="text/javascript" src="js/materialize.min.js"></script>
    <script type="text/javascript" src="~/js/JavaScript.js"></script>

    @using System.Security.Claims
    <div class="navbar-fixed">
    <nav>
        <div class="nav-wrapper white">
            <a href="#!" class="brand-logo"><span class="grey-text darken-4">Traveling Nerds</span></a>
            <ul class="right hide-on-med-and-down">
                <li><a href="@Url.Action("Index", "Location")"><span class="grey-text darken-4">Search</span></a></li>
                <li><a href="badges.html"><span class="grey-text darken-4">Components</span></a></li>
               @if (User.IsSignedIn())
                {
                    <li><a href="@Url.Action("Create", "Location")"><span class="grey-text darken-4">Add Location</span></a></li>
                    
                    <li><a href="@Url.Action("LogOff", "Account")"><span class="grey-text darken-4">Log Off</span></a></li>
                <li><span class="grey-text darken-4">Hello @User.GetUserName()!</span></li>
               }
               else
               {
                    <li><a href="@Url.Action("Register", "Account")"><span class="grey-text darken-4">Register</span></a></li>
                    <li><a href="@Url.Action("Login", "Account")"><span class="grey-text darken-4">Login</span></a></li>
                }
            </ul>
        </div>
    </nav>
    </div>

    <div>
        @RenderBody()
    </div>
</body>
</html>
