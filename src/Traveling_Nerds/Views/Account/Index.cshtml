</script>
<div class="slider">
    <ul class="slides">
        <li>
            <img src="http://img.inspiredluxuryescapes.com/assets/Uploads/ibiza.jpg"> <!-- random image -->
            <div class="caption center-align">
                <h3>Traveling the world!</h3>
                <h5 class="light grey-text text-lighten-3">See, Eat, Listen, and Laugh.</h5>
            </div>
        </li>
        <li>
            <img src="http://www.tourist-destinations.com/wp-content/uploads/2011/08/ibiza-by-night.jpg"> <!-- random image -->
            <div class="caption left-align">
                <h3>Writing code!</h3>
                <h5 class="light grey-text text-lighten-3">Anywhere and everywhere in the wordl!.</h5>
            </div>
        </li>
        <li>
            <img src="http://www.best-beaches.com/images/ibiza/ibiza-spain.jpg"> <!-- random image -->
            <div class="caption right-align">
                <h3>Enjoying the Life!</h3>
                <h5 class="light grey-text text-lighten-3">Travelng, blogging, and coding!!!</h5>
            </div>
        </li>
        <li>
            <img src="http://lorempixel.com/580/250/nature/4"> <!-- random image -->
            <div class="caption center-align">
                <h3>Chasing the Dream</h3>
                <h5 class="light grey-text text-lighten-3">Life is too short!!!</h5>
            </div>
        </li>
    </ul>
</div>


<div class="container">
    <div class="row">
        <div class="container">
            <h4>Here are all of Locations:</h4>
            @foreach (var locationList in Model)
            {
                <div class="container">
                    <div class="card">
                        <div class="card-image waves-effect waves-block waves-light">
                            <img class="location" src=@Html.DisplayFor(model => locationList.Image) />
                        </div>
                        <div class="card-content">
                            <span class="card-title activator grey-text text-darken-4">@Html.DisplayFor(model => locationList.Name)</span>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
